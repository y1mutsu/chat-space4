.message_contents{"data-id": message.id}
  .upper-info
    %p.upper-info__talker
      = message.user.name
    %p.upper-info__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  - if message.content.present?
    .message__text
      = message.content
  = image_tag message.image, class: 'lower-message__image' if message.image.present?


